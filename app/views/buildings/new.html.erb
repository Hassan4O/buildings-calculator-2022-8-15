<div class="container mt-5 justify-content-center ">
    <div class="search-area justify-content-center">
        <h3 class="mt-4 mb-5" >New Biulding</h3>
        <%= form_tag new_building_path, remote: true, method: :get do %>
            <div class="form-group row">
                <div class="col-sm-6">
                    <%= text_field_tag :title, params[:title], placeholder: "Title of Building..", autofocus: true, class: "form-control mb-3" %>
                    <%= text_field_tag :windows, params[:windows], placeholder: "Number of windows..", autofocus: true, class: "form-control " %>
                </div>
                <div class="col-sm-3">
                    <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= 'Enter' %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<% if @window_groub %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="container overflow-hidden text-center">
                <%= form_with(scope: :buildings, url: buildings_path) do |form| %>
                    <div class="row gy-5">
                        <% for a in 1..params[:windows].to_i do %>
                            <div class="col-6">
                                <div class="card mb-5">
                                    <div class="card-header">
                                        window <%= a %>
                                    </div>
                                    <div class="input-group mb-3 mt-2 pr-2">
                                        <%= form.text_field nil, id: nil, placeholder: "window width" , class: "form-control form-control-lg" %> 
                                        <span class="input-group-text form-control-lg " id="basic-addon2">CM</span>
                                    </div>
                                    <div class="input-group mt-2 mb-3 ">
                                        <%= form.text_field nil, id: nil, placeholder: "window Height", class: "form-control form-control-lg" %> 
                                        <span class="input-group-text form-control-lg " id="basic-addon2">CM</span>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                     </div> 
                    <%= form.submit "Go", class: "btn btn-success" %>  
                <% end %>
            </div> 
        </div> 
    </div> 
<% end %>
